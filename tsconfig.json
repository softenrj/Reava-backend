{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": [
      "ES2020"
    ],
    "noImplicitAny": true,
    "strict": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@src/*": [
        "src/*"
      ]
    },
    "useUnknownInCatchVariables": false,
    "outDir": "dist",
    "rootDir": "./src"
  },
  "ts-node": {
    "swc": true,
    "require": [
      "tsconfig-paths/register",
      "./config.ts"
    ]
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "src/public/*",
    "tests",
    "vitest.config.mts",
    "config.ts",
    "scripts",
    "eslint.config.ts"
  ]
}