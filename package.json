    "@types/supertest": "^6.0.3",
    "cross-env": "^7.0.3",
    "eslint": "^9.29.0",
    "eslint-plugin-n": "^17.20.0",
    "find": "^0.3.0",
    "fs-extra": "^11.3.0",
    "jiti": "^2.4.2",
    "nodemon": "^3.1.10",
